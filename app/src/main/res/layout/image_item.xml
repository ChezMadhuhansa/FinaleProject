<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sample2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text= "Kanakanam Gamage Tharuka  "
                android:fontFamily="@font/opensans_regular"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 min ago "
                android:textSize="11dp"
                android:layout_marginLeft="8dp"
                android:padding="1dp"
                />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="92dp"
            android:background="@color/transparent"
            android:src="@drawable/ellipsis"
            android:backgroundTint="@color/transparent"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/opensans_light"
            android:padding="2dp"
            android:text="Nice parking, morons. #SLtraffic   "
            android:textSize="12dp"
            android:textColor="@color/Black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/samplehd"
            android:adjustViewBounds="true"
            android:padding="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:padding="5dp"
        android:layout_marginTop="2dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/opensans_light"
            android:padding="2dp"
            android:text="React"
            android:textAllCaps="false"
            android:textColor="@color/colorMainFont"
            android:textSize="14dp"
            app:backgroundTint="@color/colorMainBackground"
            app:icon="@drawable/like24dp"
            app:iconGravity="textStart"
            app:iconSize="21dp"
            android:layout_marginLeft="70dp"
            app:iconTint="@color/buttonStroke" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/opensans_light"
            android:padding="2dp"
            android:text="Review"
            android:textAllCaps="false"
            android:textColor="@color/colorMainFont"
            android:textSize="14dp"
            app:backgroundTint="@color/colorMainBackground"
            app:icon="@drawable/review"
            app:iconGravity="textStart"
            app:iconSize="21dp"
            android:layout_marginLeft="90dp"
            app:iconTint="@color/buttonStroke" />

    </LinearLayout>


</LinearLayout>